-# frozen_string_literal: true
= simple_form_for [:admin, @article] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  - # /admin/articlise/xxx で id は取れるので、hidden_field は不要
  -# = f.hidden_field :id

  .form-inputs
    = f.input :entry_at
    = f.input :title
    = f.input :content
    = f.input :published
    = f.input :access_level, collection: Article.access_level.options, as: :radio_buttons

  .form-actions
    = f.button :submit, class: "btn btn-primary"

= render 'article_image_upload_field'
